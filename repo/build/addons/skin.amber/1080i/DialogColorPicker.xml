<?xml version="1.0" encoding="utf-8"?>
<window>
	<!-- This dialog is new for Nexus -->
	<defaultcontrol always="true">6</defaultcontrol>
	<include>DialogOpenClose</include>
	<controls>
		<control type="group">
			<width>1220</width>
			<height>740</height>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<!-- background panel -->
			<control type="image">
				<texture border="40">dialogs/TinyDialog.png</texture>
				<colordiffuse>$VAR[DialogBGColor]</colordiffuse>
			</control>
			<control type="label">
				<left>70</left>
				<top>20</top>
				<width>300</width>
				<height>60</height>
				<font>font24_title</font>
				<textcolor>$VAR[HighlightColor]</textcolor>
				<align>left</align>
				<label>Select Colour</label>
			</control>
			<control type="group">
				<left>60</left>
				<top>90</top>
				<!-- Color picker panel -->
				<control type="panel" id="6">
					<width>730</width>
					<height>560</height>
					<onup>6</onup>
					<ondown>6</ondown>
					<onleft>9001</onleft>
					<onright>61</onright>
					<orientation>vertical</orientation>
					<pagecontrol>61</pagecontrol>
					<viewtype label="100">icon</viewtype>
					<itemlayout height="80" width="146">
						<control type="group">
							<control type="image">
								<top>3</top>
								<left>8</left>
								<width>138</width>
								<height>74</height>
								<texture>buttons/color-back.png</texture>
							</control>
							<control type="image">
								<top>3</top>
								<left>8</left>
								<width>138</width>
								<height>74</height>
								<texture border="0">colors/white.png</texture>
								<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
								<aspectratio>stretch</aspectratio>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="80" width="146">
						<control type="group">
							<animation effect="zoom" time="200" tween="sine" easing="inout" start="100" end="124" center="auto">Focus</animation>
							<control type="image">
								<top>3</top>
								<left>8</left>
								<width>138</width>
								<height>74</height>
								<texture>buttons/color-back.png</texture>
							</control>
							<control type="image">
								<top>3</top>
								<left>8</left>
								<width>138</width>
								<height>74</height>
								<texture border="0">colors/white.png</texture>
								<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
								<aspectratio>stretch</aspectratio>
							</control>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="61">
					<left>770</left>
					<width>12</width>
					<height>560</height>
					<onleft condition="Control.IsVisible(6)">6</onleft>
					<onright>9001</onright>
					<orientation>vertical</orientation>
				</control>
				<control type="label">
					<left>8</left>
					<top>580</top>
					<width>880</width>
					<height>35</height>
					<align>left</align>
					<label>[COLOR=$VAR[HighlightColor]]$LOCALIZE[737]: [/COLOR]$INFO[Container(6).ListItem.Label,, - ]$INFO[Container(6).ListItem.Label2,#,]</label>
				</control>
				<!-- Buttons -->
				<control type="grouplist" id="9001">
					<left>820</left>
					<width>380</width>
					<orientation>vertical</orientation>
					<itemgap>20</itemgap>
					<onleft>6</onleft>
					<onright>6</onright>
					<onup>9001</onup>
					<ondown>9001</ondown>
					<height>550</height>
					<!-- Cancel button -->
					<control type="button" id="7">
						<width>280</width>
						<height>60</height>
						<label>$LOCALIZE[222]</label>
						<font>ListDetails</font>
						<align>center</align>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>