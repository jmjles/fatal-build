<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">8</defaultcontrol>
	<controls>
		<include condition="Skin.HasSetting(Sub_MainMenuBG)">SubBackgroundLists</include>
		<include>DefaultBackground</include>
		<control type="mover" id="8">
			<description>top left mover</description>
			<width>256</width>
			<height>256</height>
			<texturefocus>calibrate/CalibrateTopLeft2.png</texturefocus>
			<texturenofocus></texturenofocus>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="mover" id="9">
			<description>right bottom mover</description>
			<posx>1644</posx>
			<posy>824</posy>
			<width>256</width>
			<height>256</height>
			<texturefocus>calibrate/CalibrateBottomRight2.png</texturefocus>
			<texturenofocus></texturenofocus>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="mover" id="10">
			<description>subtitle position mover</description>
			<posx>832</posx>
			<posy>592</posy>
			<width>256</width>
			<height>128</height>
			<texturefocus border="0,3,0,3">calibrate/CalibrateSubtitles2.png</texturefocus>
			<texturenofocus></texturenofocus>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="resize" id="11">
			<description>pixel aspect ratio box</description>
			<posy>348</posy>
			<width>384</width>
			<height>384</height>
			<texturefocus>calibrate/CalibratePixelRatio.png</texturefocus>
			<texturenofocus></texturenofocus>
			<movingspeed acceleration="140" maxvelocity="300" resettimeout="180" delta="1">
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="mover" id="12">
			<description>reset calibration</description>
			<left>0</left>
			<top>900</top>
			<width>100</width>
			<height>100</height>
			<texturefocus colordiffuse="FF04A7d2">calibrate/reset.png</texturefocus>
			<texturenofocus />
		</control>
		<control type="label" id="2">
			<description>resolution label</description>
			<posx>30</posx>
			<posy>60</posy>
			<width>1860</width>
			<height>30</height>
			<align>center</align>
		</control>
		<control type="label" id="3">
			<description>help information</description>
			<posx>30</posx>
			<posy>120</posy>
			<width>1860</width>
			<height>30</height>
			<align>center</align>
		</control>
		<control type="label" id="4">
			<description>calibration value</description>
			<posx>30</posx>
			<posy>180</posy>
			<width>1860</width>
			<height>30</height>
			<align>center</align>
		</control>
	</controls>
</window>